<style>









legend {
  font-size: 16px;
  font-family: "Helvetica";
  color: rgb( 255, 255, 255 );
  
}



form {
  font-family: "Helvetica";
  color: rgb( 255, 255, 255 );
  font-weight: bold;
  line-height: 1.125;
  text-align: center ;
  padding-top: 10px;
  line-height: 1.525;
  z-index: 5;
  margin: auto;
  text-decoration: none;
}




input {
  outline:none;
}

</style>

<div class="container">
  <div class="row">

  <div id=maindiv>
  <object id="ship" data="http://db.tt/lzHyje43" type="image/svg+xml"></object>

 <!--  <embed id="ship" src="http://db.tt/lzHyje43" width="400" height="130"
  type="image/svg+xml"
  pluginspage="http://www.adobe.com/svg/viewer/install/" /> -->
  <div id="title">battleships</div>
    <% if !session[:player_name] %>
      <% if @@player_count>0 %>
    	<p class="text-center">There is currently <%= @@player_count %> player waiting to play with you</p>
      <% else %>
      <p class="text-center">There are no players in the lobby</p>
      <% end %>
    <% end %>

  	<% if @@player_count < 2 && !session[:player_name] %>
      	<div id="sign-up">
      	<form action="/" method="post">
      		<fieldset>
      			<input type="text" size ="30" id="name" name="player_name" style placeholder="Enter your name here"/>
      			<div class="sign-up-btn">
      				<button type="submit" class="btn"><i class="icon-user"></i> | Add me as a player</button>
      			</div>
      		</fieldset>
      	</form>
      	</div>
  	<% elsif @@player_count < 2 && session[:player_name] %>
      	<br />
        <p>Hi, <%= session[:player_name]%>!</p>
      	<p>Waiting for another player.</p>
      	<p>Please <a href="/" style="text-decoration:underline;">refresh</a> this page to check if the game is ready to begin.</p>
  	<% else %>
      	<p>There are now enough players to start the game!</p>
        <div class="start-game-btn">
      	   <p><button class="btn btn-info"><a href="place_ships">START GAME</a></button></p>
        </div>  
  	<% end %>

  </div>
</div>